{
	"name": "C# (.NET)",
	"image": "mcr.microsoft.com/devcontainers/dotnet:0-6.0",
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"installBicep": true,
			"version": "latest"
		}
	},
		"github-copilot": {
			"install": true,
			"version": "latest"
		},
	"customizations": {
		"vscode": {
			"extensions": [
				"Codeium.codeium"
			]
		}
	},
	"postCreateCommand": "cd /workspaces/your-repo/Application && dotnet restore"
}
